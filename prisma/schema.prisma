// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String    // Hashed password
  role          UserRole
  departmentId  String
  department    Department @relation(fields: [departmentId], references: [id])
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  requisitions           Requisition[]
  approvalSteps          ApprovalStep[]
  auditTrails            AuditTrail[]
  notifications          Notification[]
  settings               UserSettings?
  pushSubscription       PushSubscription?
  notificationDeliveries NotificationDelivery[]

  @@index([email])
  @@index([departmentId])
}

model Department {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  users         User[]
  requisitions  Requisition[]
  approvalRules ApprovalRule[]
}

model Requisition {
  id                    String   @id @default(cuid())
  title                 String
  category              String
  description           String
  estimatedCost         Decimal  @db.Decimal(12, 2)
  approvedCost          Decimal? @db.Decimal(12, 2)
  actualCostPaid        Decimal? @db.Decimal(12, 2)
  currency              String   @default("NGN")
  urgencyLevel          String   @default("MEDIUM")
  businessJustification String
  status                String   @default("DRAFT")
  submitterId           String
  submitter             User     @relation(fields: [submitterId], references: [id])
  departmentId          String
  department            Department @relation(fields: [departmentId], references: [id])
  paymentMethod         String?
  paymentReference      String?
  paymentDate           DateTime?
  paymentComment        String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  closedAt              DateTime?

  approvalSteps ApprovalStep[]
  attachments   Attachment[]
  auditTrails   AuditTrail[]
  notifications Notification[]

  @@index([submitterId])
  @@index([departmentId])
  @@index([status])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([category])
  @@index([urgencyLevel])
  @@index([paymentDate])
  @@index([status, createdAt])
  @@index([departmentId, status])
  @@index([submitterId, status])
}

model ApprovalRule {
  id                  String   @id @default(cuid())
  minAmount           Decimal  @db.Decimal(12, 2)
  maxAmount           Decimal? @db.Decimal(12, 2)
  requiredApprovers   String[] // JSON array of role names
  departmentId        String?
  department          Department? @relation(fields: [departmentId], references: [id])
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([departmentId])
}

model ApprovalStep {
  id              String   @id @default(cuid())
  requisitionId   String
  requisition     Requisition @relation(fields: [requisitionId], references: [id], onDelete: Cascade)
  stepNumber      Int
  requiredRole    String
  assignedUserId  String?
  assignedUser    User?    @relation(fields: [assignedUserId], references: [id])
  status          String   @default("PENDING")
  approverComment String?
  approvedAt      DateTime?
  createdAt       DateTime @default(now())

  @@unique([requisitionId, stepNumber])
  @@index([requisitionId])
  @@index([assignedUserId])
  @@index([status])
}

model AuditTrail {
  id            String   @id @default(cuid())
  requisitionId String
  requisition   Requisition @relation(fields: [requisitionId], references: [id], onDelete: Cascade)
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  changeType    String
  fieldName     String?
  previousValue String?  // JSON stringified
  newValue      String?  // JSON stringified
  metadata      String?  // JSON stringified
  timestamp     DateTime @default(now())

  @@index([requisitionId])
  @@index([timestamp])
  @@index([userId])
  @@index([changeType])
  @@index([requisitionId, timestamp])
}

model Attachment {
  id            String   @id @default(cuid())
  requisitionId String
  requisition   Requisition @relation(fields: [requisitionId], references: [id], onDelete: Cascade)
  fileName      String
  fileSize      Int
  fileType      String
  storageUrl    String
  uploadedBy    String
  uploadedAt    DateTime @default(now())

  @@index([requisitionId])
}

model Notification {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  requisitionId String
  requisition   Requisition @relation(fields: [requisitionId], references: [id], onDelete: Cascade)
  type          String
  message       String
  isRead        Boolean  @default(false)
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([requisitionId])
  @@index([userId, isRead])
  @@index([createdAt])
}

enum UserRole {
  STAFF
  MANAGER
  FINANCE
  ADMIN
}

model UserSettings {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailNotifications  Boolean  @default(true)
  approvalReminders   Boolean  @default(true)
  weeklyReports       Boolean  @default(true)
  systemAlerts        Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
}

model PushSubscription {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription String   // JSON stringified PushSubscriptionJSON
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

model NotificationDelivery {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel   String   // EMAIL, PUSH, IN_APP
  status    String   // DELIVERED, FAILED, PENDING
  payload   String?  // JSON stringified payload
  error     String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([channel])
  @@index([status])
  @@index([createdAt])
}
