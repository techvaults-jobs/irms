{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-empty-object-type": "off",
    "react-hooks/exhaustive-deps": "off",
    "prefer-const": "off",
    "@next/next/no-img-element": "warn"
  },
  "ignorePatterns": [
    "src/__tests__/**",
    ".next/**",
    "out/**",
    "build/**"
  ]
}
