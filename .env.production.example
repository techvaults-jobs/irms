# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# Database - Use production PostgreSQL instance
DATABASE_URL="postgresql://user:password@prod-db-host:5432/irms_prod"

# NextAuth - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-production-secret-key-here"
NEXTAUTH_URL="https://yourdomain.com"

# Email Service
RESEND_API_KEY="your-production-resend-api-key"

# File Storage (Vercel Blob)
BLOB_READ_WRITE_TOKEN="your-production-blob-token"

# Application
NODE_ENV="production"

# Optional: Enable detailed logging in production (use sparingly)
# LOG_LEVEL="info"
